%h2
  Quick Example

:javascript
  function showOrHideBatmanBoxOfficePerformanceTable(link) {
    var $table = $(".batman-box-office-performance");
    if ($table.is(":visible")) {
      $table.parent().slideUp(500);
      $(link).text("show");
    } else {
      $table.parent().slideDown(500);
      $(link).text("hide");
    }
  }

